<% layout('layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Edit Article</h1>
</div>
<div class="col-6 offset-3">
  <form
    action="/articles/<%= article._id %>?_method=PUT"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <div class="mb-3">
      <label class="form-label" for="title">Title</label>
      <input
        class="form-control"
        type="text"
        id="title"
        name="article[title]"
        value="<%= article.title %>"
        required
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="description">Description</label>
      <input
        class="form-control"
        type="text"
        id="description"
        name="article[description]"
        value="<%= article.description %>"
        required
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="content">Content</label>
      <textarea
        class="form-control"
        type="text"
        id="content"
        name="article[content]"
        rows="4"
        cols="50"
        required
      >
<%= article.content %></textarea
      >
    </div>
    <div class="mb-3">
      <label class="form-label" for="image">Image Url</label>
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input
          class="form-control"
          type="text"
          id="image"
          name="article[image]"
          aria-describedby="basic-addon1"
          value="<%= article.image %>"
          required
        />
      </div>
    </div>

    <div class="mb-3">
      <button class="btn btn-success">Update Article</button>
    </div>
  </form>
  <a href="/articles/<%= article._id %> ">Back to Article</a>
</div>
