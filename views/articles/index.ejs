<% layout('layouts/boilerplate')%>
<h1>All Articles</h1>
<a href="/articles/new">Add Article</a>
<ul>
  <% for (let article of articles) {%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" src="<%= article.image %>" alt="image" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title"><%= article.title %></h2>
          <p class="card-text"><%= article.description %></p>
          <a href="/articles/<%= article._id %>" class="btn btn-primary"
            >View <%= article.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>
